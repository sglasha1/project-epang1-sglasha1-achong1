<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href = "/public/css/style.css">
    <link rel="icon" href="/public/images/favicon.png" type="image/png"> 


    <title>Register</title>
  </head>
  <body>
    <%- include("partials/header.ejs", { user: locals.user, next: locals.next}) %>
    <h1 class="message" style="margin-top: 50px"> Register</h1>
    <div class = "mainConent">
    <div class = "RegBox">
        <h3> Welcome! </h3>
        Create your account here.
        <br>
        <br>
        <form id="registration" action="/submit-reg" method="POST">
        Username: <input type ="text" name="username" placeholder="" maxlength="40" required>
        <p>
          <% if (errorMessage != '') { %>
            <%= errorMessage %>
          <% } %></p>
        Password: <input type ="password" name="password" placeholder="" maxlength="40" required>  
        <br>
        <br>
        Email: <input type ="email" name="email" placeholder="" maxlength="40" required>  
        <br>
        <br>
        <button type="submit" class="register" id="create" style="background-color: brown; color: white;">
            Create account
        </button>
        </form>
        <br>
        <br>
        Already have an account? <a href="/login"> Log in </a>
    </div>
    </div>
  </body>
